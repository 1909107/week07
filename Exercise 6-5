#include <stdio.h>
int main() {
   int año;
   printf("Ingrese un año ");
   scanf("%x", &año);
   if (año % 400 == 0) {
      printf("%x no es un salto de año ", año);
   }
   else if (año % 100 == 0) {
      printf("%x es un salto de año", año);
   }
   else if (año % 4 == 0) {
      printf("%x es un salto de año", año);
   }
   else {
      printf("%x no es un salto de año", año);
   }
   return 0;
}
